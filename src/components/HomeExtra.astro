---
import type { CollectionEntry } from "astro:content";
import { destinationSlug } from "../content/destinations";
import HomeCard from "./HomeCard.astro";

export interface Props {
  row: readonly CollectionEntry<"destinations">[];
}

const { row } = Astro.props;
---

<hr class="col-span-full border-zinc-900" />
<section class="col-span-full grid home-extra">
  {
    row.map((page) => (
      <HomeCard
        title={page.data.Name}
        href={`/travel-guides/${destinationSlug(page)}`}
      />
    ))
  }
</section>

<style>
  .home-extra {
    grid-template-columns: repeat(auto-fit, min(20vw, 225px));
    column-gap: min(2vw, 2rem);
    margin-right: min(20vw, 225px);
  }
  @media (max-width: 600px) {
    .home-extra {
      margin-right: 0;
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
