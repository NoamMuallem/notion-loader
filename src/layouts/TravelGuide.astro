---
import "../styles/prose.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Time from "../components/Time.astro";
import Footer from "../components/Footer.astro";
import Squiggle from "../components/Squiggle.astro";
import TableOfContents from "../components/toc/TableOfContents.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate },
  headings,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} travel guide from Tiger x Daphne`}
      description={description}
    />
  </head>

  <body>
    <Header />

    <article class="mx-auto px-4">
      <header class="pb-2 mb-8">
        <h1
          class="text-5xl inline-block relative font-ultracondensed text-shadow-sm shadow-black/30"
        >
          {title}
          <Squiggle
            autoAnimate
            class="absolute -top-10 -left-12 text-orange-500 -z-1"
          />
        </h1>
        <div class="text-lg py-2 px-1.5 border-b border-zinc-900/40">
          <Time pubDate={pubDate} updatedDate={updatedDate} />
        </div>
      </header>
      <TableOfContents headers={headings} />
      <div class="prose">
        <slot />
      </div>
    </article>
    <Footer />
    <style>
      @media (min-width: 768px) {
        article {
          display: grid;
          column-gap: 2rem;
          grid-template:
            ". header" auto
            "toc content" auto
            / 300px fit-content(48rem);
        }

        header {
          grid-area: header;
        }
        .prose {
          grid-area: content;
        }
      }
    </style>
  </body>
</html>
