---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomeCard from "../components/HomeCard.astro";
import HomeLine from "../components/HomeLine.astro";
import Squiggle from "../components/Squiggle.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title="My personal website."
      description="Welcome to my website!"
    />
  </head>
  <body class="bg-[#bdbabf]">
    <Header />
    <main>
      <section class="home-cards grid m-2">
        <a
          class="text-center relative p-12 row-span-6 text-white text-shadow shadow-black/50 squiggle-0 hover:squiggle-1 hover:text-orange-600"
          href="/travel-guides/hawaii"
        >
          <h2 class="inline-block text-5xl font-ultracondensed relative z-10">
            Hawai'i<br />Islands
            <Squiggle
              class="absolute -bottom-10 -left-4 -right-8 text-black -z-1"
            />
          </h2>
          <img
            class="bg-black/30 absolute inset-0 w-full h-full object-cover object-top"
            src="/images/big_island_old_airport.jpg"
          />
        </a>

        <HomeLine class="row-start-1" />
        <HomeCard
          class="row-start-2 col-start-2"
          title="Oahu"
          href="/travel-guides/oahu-hawaii"
          src="/images/oahu_honolulu.jpg"
        />
        <HomeCard
          class="row-start-2 col-start-3 col-span-2"
          title="Big Island"
          href="/travel-guides/big-island-hawaii"
          src="/images/big_island_polulu_valley.jpg"
        />

        <HomeLine class="row-start-3" />
        <HomeCard
          class="row-start-4 col-start-2"
          title="East Coast, USA"
          href="/travel-guides/east-coast-usa"
          src="/images/ny_brooklyn_bridge.jpg"
        />
      </section>
    </main>
    <Footer />
    <style>
      .home-cards {
        grid-template-columns: 40vw repeat(3, 220px) auto;
        column-gap: 2rem;
        grid-auto-rows: 1px 300px;
      }
    </style>
  </body>
</html>
